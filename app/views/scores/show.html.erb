<p id="notice"><%= notice %></p>

<div class="container col-md-6 col-md-offset-3">
  <div class="card">
      <h4 class="card-header bg-dark text-white">Showing Score
          <div class="float-right small">
            <%= link_to 'Edit', edit_evaluation_instance_score_path(@score.evaluation_instance, @score), :class => "btn btn-success" %>
          </div>
      </h4>
      <div class="card-body text-centered">
        <div class=" col-md-12 col-lg-12 "> 
          <table class="table table-user-information">
            <tbody>
                <tr>
                    <td>Student:</td>
                    <td> <%= @score.student.summary %> </td>
                </tr>
                <tr>
                    <td>Score:</td>
                    <td> <%= @score.score %></td>
                </tr>
            </tbody>
          </table>
        </div>
      </div>
  </div>

  <br>
  <%= link_to 'Back', evaluation_instance_scores_path(@score.evaluation_instance), :class => "btn btn-secondary" %>
</div>