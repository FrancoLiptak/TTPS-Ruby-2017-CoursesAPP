<div class="container col-md-8 col-md-offset-3">
  <h1>Listing scores</h1>

  <table class="table">
    <tr>
      <th>Student</th>
      <th>Score</th>
      <th scope="col" colspan="3" style="text-align:center;">Options</th>
    </tr>

  <% @scores.each do |score| %>
    <tr>
      <td><%= score.student.summary %></td>
      <td><%= score.score %></td>
      <td><%= link_to 'Show', [score.evaluation_instance, score], :class => "btn btn-info" %></td>
      <td><%= link_to 'Edit', edit_evaluation_instance_score_path(score.evaluation_instance, score), :class => "btn btn-success" %></td>
      <td><%= link_to 'Destroy', [score.evaluation_instance, score], :method => :delete, data: { :confirm => 'Are you sure?' }, :class => "btn btn-danger" %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Score', new_evaluation_instance_score_path(params[:evaluation_instance_id]), :class => "btn btn-primary" %>
</div>
