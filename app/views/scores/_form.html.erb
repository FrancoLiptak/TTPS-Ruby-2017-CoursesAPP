<% if @score.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h4><%= pluralize(@score.errors.count, "error") %> prohibited this score from being saved:</h4>
    <ul>
      <% @score.errors.full_messages.each do |msg| %>
        <li class="font-italic"><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container col-md-12 col-md-offset-6"> 
  <%= form_for([@score.evaluation_instance, @score]) do |f| %>
  <form>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :student %><br />
        <%= f.collection_select :student_id, @score.evaluation_instance.course.students, :id, :summary, {:prompt => "Select a student"}, {:class=>"form-control"} %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :score %><br />
        <%= f.number_field :score, class: "form-control" %>
      </div>
      <div class="form-group col-md-12">
        <%= f.submit class: "btn btn-success" %>
      </div>
    </div>
  </form>
  <% end %>
</div>