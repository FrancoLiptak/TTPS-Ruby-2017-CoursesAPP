<% if @student.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h4><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h4>
    <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li class="font-italic"><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<div class="container col-md-12 col-md-offset-6"> 
  <%= form_for([@student.course, @student]) do |f| %>
  <form>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, :class => "form-control" %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :name %><br />
        <%= f.text_field :name, :class => "form-control" %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :dni %><br />
        <%= f.number_field :dni, :class => "form-control" %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :student_number %><br />
        <%= f.text_field :student_number, :class => "form-control" %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :email %><br />
        <%= f.text_field :email, :class => "form-control" %>
      </div>
      <div class="form-group col-md-12">
        <%= f.submit class: "btn btn-success" %>
      </div>
    </div>
  </form>

<% end %>
</div>