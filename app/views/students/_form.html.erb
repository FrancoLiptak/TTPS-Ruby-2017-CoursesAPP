<% if @student.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h4><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h4>
    <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li class="font-italic"><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container col-md-12 col-md-offset-6"> 
  <%= simple_form_for([@student.course, @student]) do |f| %>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.input :last_name, :class => "form-control", required: true, :error => false %>
        </div>
        <div class="form-group col-md-6">
          <%= f.input :name, :class => "form-control", required: true, :error => false %>
        </div>
        <div class="form-group col-md-6">
          <%= f.input :dni, :class => "form-control", required: true, :error => false %>
        </div>
        <div class="form-group col-md-6">
          <%= f.input :student_number, :class => "form-control", required: true, :error => false %>
        </div>
        <div class="form-group col-md-6">
          <%= f.input :email, :class => "form-control", required: true, :error => false %>
        </div>
        <div class="form-group col-md-12">
          <%= f.button :submit, class: "btn btn-success" %>
        </div>
      </div>

  <% end %>
</div>