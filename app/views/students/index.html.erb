<div class="container col-md-8 col-md-offset-3">
  <h1>Listing students</h1>

  <table class="table">
    <tr>
      <th>Last name</th>
      <th>Name</th>
      <th>Dni</th>
      <th>Student number</th>
      <th>Email</th>
      <th scope="col" colspan="3" style="text-align:center;">Options</th>
    </tr>

    <% @students.each do |student| %>
      <tr>
        <td><%= student.last_name %></td>
        <td><%= student.name %></td>
        <td><%= student.dni %></td>
        <td><%= student.student_number %></td>
        <td><%= student.email %></td>
        <td><%= link_to 'Show', [student.course, student], :class => "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_course_student_path(student.course, student), :class => "btn btn-success" %></td>
        <td><%= link_to 'Destroy', [student.course, student], :method => :delete, data: { :confirm => 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </table>

  <br />

  <%= link_to 'New Student', new_course_student_path(params[:course_id]), :class => "btn btn-primary" %>
  <%= link_to 'Back', courses_path, class: 'btn btn-secondary' %>
  
</div>