<h1>Listing students</h1>

<table>
  <tr>
    <th>Last name</th>
    <th>Name</th>
    <th>Dni</th>
    <th>Student number</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= student.last_name %></td>
    <td><%= student.name %></td>
    <td><%= student.dni %></td>
    <td><%= student.student_number %></td>
    <td><%= student.email %></td>
    <td><%= link_to 'Show', [student.courses, student] %></td>
    <td><%= link_to 'Edit', edit_courses_student_path(student.courses, student) %></td>
    <td><%= link_to 'Destroy', [student.courses, student], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

