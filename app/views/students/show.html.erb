<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
      <p id="notice"><%= notice %></p>
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title"> <%= @student.last_name %> <%= @student.name %> </h3>
        </div>
        <div class="panel-body">
          <div class="row">
            
            <div class=" col-md-12 col-lg-12 "> 
              <table class="table table-user-information">
                <tbody>
                    <tr>
                        <td>Last name:</td>
                        <td> <%= @student.last_name %> </td>
                    </tr>
                    <tr>
                        <td>Name:</td>
                        <td> <%= @student.name %> </td>
                    </tr>
                    <tr>
                        <td>DNI:</td>
                        <td> <%= @student.dni %> </td>
                    </tr>
                    <tr>
                        <td>Student Number:</td>
                        <td> <%= @student.student_number %> </td>
                    </tr>
                    <tr>
                        <td>Email:</td>
                        <td> <%= @student.email %> </td>
                    </tr>
                </tbody>
            </table>
          </div>
        </div>
    </div>
  </div>
</div>
<%= link_to 'Edit', edit_courses_student_path(@student.courses, @student) %> |
<%= link_to 'Back', courses_students_path(@student.courses) %>