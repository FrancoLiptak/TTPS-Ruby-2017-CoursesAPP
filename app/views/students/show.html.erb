<div class="container col-md-6 col-md-offset-3">
  <div class="card">
      <h4 class="card-header bg-dark text-white">Showing Student
          <div class="float-right small">
            <%= link_to 'Edit', edit_course_student_path(@student.course, @student), :class => "btn btn-success" %>
          </div>
      </h4>
      <div class="card-body text-centered">
        <div class=" col-md-12 col-lg-12 "> 
          <table class="table table-user-information">
            <tbody>
                <tr>
                    <td>Last name:</td>
                    <td> <%= @student.last_name %> </td>
                </tr>
                <tr>
                    <td>Name:</td>
                    <td> <%= @student.name %> </td>
                </tr>
                <tr>
                    <td>DNI:</td>
                    <td> <%= @student.dni %> </td>
                </tr>
                <tr>
                    <td>Student Number:</td>
                    <td> <%= @student.student_number %> </td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td> <%= @student.email %> </td>
                </tr>
            </tbody>
          </table>
        </div>
      </div>
  </div>

  <br>
  <%= link_to 'Back', course_students_path(@student.course), :class => "btn btn-secondary" %>
</div>