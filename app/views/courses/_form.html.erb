<% if course.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h4><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h4>
    <ul>
      <% course.errors.full_messages.each do |message| %>
        <li class="font-italic"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: course, local: true) do |form| %>
  <div class="form-inline col-md-12">
    <div class="col-md-2">
      <%= form.label :year %>
    </div>
    <div class="col-md-6">
      <%= form.number_field :year, id: :course_year, class: 'form-control' %>
    </div>
    <div class="col-md-4">
      <%= form.submit class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
