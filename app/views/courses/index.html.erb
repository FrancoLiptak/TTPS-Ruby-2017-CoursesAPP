<% content_for :modal do %>
  <%= render partial: 'layouts/modal', locals: { route_path: courses_path } %>
<% end %>

<div class="container col-lg-8">
  <div class="card mb-3 table-responsive">
    <%= image_tag("portada-3.jpeg", class: "card-img-top img-fluid") %>
    <div class="card-block">
      <div class="card-header">Courses</div>
        <div class="card-body">
          <% if !(@courses.empty?) %>
            <table class="table table-hover text-center">
              <thead>
                <tr>
                  <th>Year</th>
                  <th colspan="5" style="text-align:center;">Options</th>
                </tr>
              </thead>

              <tbody>
                <% @courses.each do |course| %>
                  <tr>
                    <td><%= course.year %></td>
                    <td><%= link_to 'Edit', edit_course_path(course), :remote => true, :class => "btn btn-success" %></td>
                    <td>
                      <button data-id="<%= course.id %>" data-slice="9" data-toggle="modal" data-target="#delete-confirm" class="btn-delete btn btn-danger">
                        <%= 'Delete' %>
                      </button>
                    </td>
                    <td><%= link_to 'Students', course_students_url(course), :class => "btn btn-info" %> </td>
                    <td><%= link_to 'Evaluation Instances', course_evaluation_instances_url(course), :class => "btn btn-info" %> </td>
                    <td><%= link_to 'Summary', summary_course_path(course), :class => "btn btn-info" %> </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <div class="alert alert-danger" role="alert">
              <h4 class="alert-heading">ยก Ups !</h4>
              <p>It seems that there is still no data of any course.</p>
            </div>
          <% end %>
          <%= link_to 'New Course', new_course_path, :remote => true, :class => "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="modal" style="display:none;"></div>