<div class="container col-lg-8">
  <div class="card mb-3 table-responsive">
    <%= image_tag("portada-3.jpeg", class: "card-img-top img-fluid") %>
    <div class="card-block">
      <div class="card-header">Courses</div>
        <div class="card-body">
            <table class="table table-hover table-bordered text-center">
              <thead>
                <tr>
                  <th>Year</th>
                  <th colspan="5" style="text-align:center;">Options</th>
                </tr>
              </thead>

              <tbody>
                <% @courses.each do |course| %>
                  <tr>
                    <td><%= course.year %></td>
                    <td><%= link_to 'Edit', edit_course_path(course), :class => "btn btn-success" %></td>
                    <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
                    <td><%= link_to 'Students', course_students_url(course), :class => "btn btn-info" %> </td>
                    <td><%= link_to 'Evaluation Instances', course_evaluation_instances_url(course), :class => "btn btn-info" %> </td>
                    <td><%= link_to 'Summary', summary_course_path(course), :class => "btn btn-info" %> </td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <%= link_to 'New Course', new_course_path, :class => "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
